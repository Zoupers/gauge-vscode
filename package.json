{
  "name": "Gauge",
  "repository": {
    "type": "git",
    "url": "git://github.com/getgauge/guage-vscode.git"
  },
  "description": "Gauge support for VScode",
  "author": "ThoughtWorks",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "ThoughtWorks",
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "icon": "images/gauge-icon.png",
  "galleryBanner": {
    "color": "#F5C20F",
    "theme": "dark"
  },
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "markdown",
        "extensions": [
          ".spec",
          ".cpt"
        ],
        "aliases": [
          "Gauge",
          "Specification",
          "Spec"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "snippets": [
      {
          "language": "markdown",
          "path": "./snippets/gauge.json"
      }
    ],
    "markdown.markdownItPlugins": true
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "build": "npm install && vsce package",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "^6.0.52",
    "typescript": "^2.1.5",
    "vsce": "^1.29.0",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "vscode-languageclient": "^3.1.0",
    "vscode-jsonrpc": "^3.3.0"
  }
}
