{
  "name": "gauge",
  "repository": {
    "type": "git",
    "url": "git://github.com/getgauge/guage-vscode.git"
  },
  "description": "Gauge support for VScode",
  "author": "ThoughtWorks",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "ThoughtWorks",
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onLanguage:gauge"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "gauge",
        "extensions": [
          ".spec",
          ".md",
          ".cpt"
        ],
        "aliases": [
          "Gauge",
          "Specification",
          "Spec"
        ]
      }
    ],
    "grammars": [
      {
        "language": "gauge",
        "scopeName": "text.gauge",
        "path": "./syntaxes/gauge.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "build": "npm install && vsce package",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "^6.0.52",
    "typescript": "^2.1.5",
    "vsce": "^1.29.0",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "vscode-languageclient": "^3.1.0",
    "vscode-jsonrpc": "^3.3.0"
  }
}
